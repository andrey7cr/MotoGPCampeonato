@model IEnumerable<MotoGPCampeonato.Models.Circuito>
@{
    ViewData["Title"] = "Circuitos";
}

<h2>Circuitos</h2>
<a href="/Circuitos/Crear" class="btn btn-success mb-3">+ Nuevo Circuito</a>

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var circuito in Model)
        {
            <tr>
                <td>@circuito.Nombre</td>
                <td>@circuito.Pais</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Circuitos/Editar/@circuito.CircuitoId">Editar</a>
                    <form asp-action="Eliminar" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@circuito.CircuitoId" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar circuito?')">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
