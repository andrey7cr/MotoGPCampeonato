@model MotoGPCampeonato.Models.Circuito
@{
    var esEditar = ViewContext.ActionDescriptor.DisplayName.Contains("Editar");
    ViewData["Title"] = esEditar ? "Editar Circuito" : "Crear Circuito";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["Action"]" method="post">
    <input type="hidden" asp-for="CircuitoId" />
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PaisId" class="form-label">País</label>
        <select asp-for="PaisId" asp-items="ViewBag.Paises" class="form-select"></select>
        <span asp-validation-for="PaisId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Circuitos/Index" class="btn btn-secondary">Cancelar</a>
</form>
