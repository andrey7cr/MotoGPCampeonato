@{
    ViewData["Title"] = "Podios por Piloto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<canvas id="podiosChart" width="800" height="400" style="background: linear-gradient(135deg, rgba(245,245,245,0.9) 0%, rgba(230,230,250,0.9) 100%);backdrop-filter: blur(2px);border: 1px solid rgba(0,0,0,0.1);">
</canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('podiosChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(ViewBag.Nombres)],
                datasets: [{
                    label: 'Cantidad de Podios',
                    data: [@Html.Raw(ViewBag.Cantidades)],
                    backgroundColor: 'rgba(255, 0, 0, 0.7)',
                    borderColor: 'rgba(255, 0, 0, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    </script>
}
