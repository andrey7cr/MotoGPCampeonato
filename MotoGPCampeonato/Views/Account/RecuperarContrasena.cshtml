@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-unlock-fill"></i> Recuperar Contraseña</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @TempData["Mensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }

                    <form asp-action="RecuperarContrasena" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" name="email" required placeholder="Ingrese su correo registrado" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-envelope-check-fill"></i> Enviar nueva contraseña
                        </button>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="/Account/Login">Volver al inicio de sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
