@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Inicio";
    var rolUsuario = Context.Session.GetString("Rol");
}

<body class="home-page">
    @if (ViewBag.ProximaCarrera != null)
    {
        var carrera = ViewBag.ProximaCarrera as MotoGPCampeonato.Models.Carrera;
        <div class="alert alert-dark alert-dismissible fade show shadow-sm" role="alert" style="border-left: 5px solid #ffc107;">
            <div class="d-flex align-items-start">
                <div class="me-3">
                    <i class="bi bi-flag-fill fs-3 text-warning"></i>
                </div>
                <div>
                    <h5 class="mb-1">Próxima carrera</h5>
                    <strong>@carrera.GranPremio?.Nombre</strong> - <span class="text-muted">@carrera.Tipo</span><br />
                    <i class="bi bi-calendar-event"></i> @carrera.Fecha.ToString("dd MMM yyyy")
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>

        
    }

    <div class="container home-section d-flex flex-wrap justify-content-center gap-4">
        <!-- Tarjeta de Equipos -->
        <div class="card card-bg-dark text-center p-4 shadow-lg" style="width: 22rem;">
            <h4 class="mb-3"><i class="bi bi-people-fill"></i> Equipos</h4>
            <p>Administra los equipos participantes del campeonato MotoGP.</p>
            <a href="/Equipos/Index" class="btn btn-outline-light mt-2">Ver Equipos</a>
        </div>

        <!-- Tarjeta de Pilotos -->
        <div class="card card-bg-dark text-center p-4 shadow-lg" style="width: 22rem;">
            <h4 class="mb-3"><i class="bi bi-person-vcard"></i> Pilotos</h4>
            <p>Registra y gestiona los pilotos de cada equipo.</p>
            <a href="/Pilotos/Index" class="btn btn-outline-light mt-2">Ver Pilotos</a>
        </div>
        <!-- Tarjeta de Carreras -->
        <div class="card card-bg-dark text-center p-4 shadow-lg" style="width: 22rem;">
            <h4 class="mb-3"><i class="bi bi-flag-fill"></i> Carreras</h4>
            <p>Gestiona las competencias, registra resultados y asigna puntos.</p>
            <a href="/Carreras/Index" class="btn btn-outline-light mt-2">Ver Carreras</a>
        </div>
        <!-- Tarjeta de Estadísticas -->
        <div class="card card-bg-dark text-center p-4 shadow-lg" style="width: 22rem;">
            <h4 class="mb-3"><i class="bi bi-flag-fill"></i> Eficiencia de Pilotos</h4>
            <p>Visualizá el porcentaje de eficiencia de cada piloto.</p>
            <a href="/Estadisticas/EficienciaPilotos" class="btn btn-outline-light mt-2">Ver estadística</a>
        </div>
    </div>
</body>
