@model MotoGPCampeonato.Models.Piloto

@{
    ViewData["Title"] = "Detalles del Piloto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-4 mb-3">Detalles del Piloto</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <h4 class="card-title">@Model.Nombre</h4>
        <p class="card-text">
            <strong>Equipo:</strong> @Model.Equipo?.Nombre <br />
            <strong>Puntos Acumulados:</strong> @Model.Puntos
        </p>
        <a href="/Pilotos/Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>
