@model MotoGPCampeonato.Models.Pais
@{
    var esEditar = ViewContext.ActionDescriptor.DisplayName.Contains("Editar");
    ViewData["Title"] = esEditar ? "Editar País" : "Crear País";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@ViewContext.RouteData.Values["Action"]" method="post">
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="/Paises/Index" class="btn btn-secondary">Cancelar</a>
</form>
