@model IEnumerable<MotoGPCampeonato.Models.Pais>
<h2>Listado de Países</h2>
<a href="/Paises/Crear" class="btn btn-success mb-3">+ Nuevo País</a>

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr>
                <td>@pais.Nombre</td>
                <td>
                    <a href="/Paises/Editar/@pais.PaisId" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Eliminar" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@pais.PaisId" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Eliminar país?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
